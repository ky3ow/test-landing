---
import BaseLayout from "../layouts/Base.astro";
import { Image } from "astro:assets";
import { getEntry, render } from "astro:content";

const about = await getEntry("pages", "about");
if (!about) {
	throw new Error('about page does not exist')
}

const { Content } = await render(about);

---

<BaseLayout title={about.data.title} description={about.data.description}>
  <section class="max-w-4xl mx-auto px-6 py-12">
    <h1 class="text-3xl font-bold mb-6">{about.data.title}</h1>
    <p class="text-lg text-gray-700">{about.data.description}</p>
    <Content />
  </section>

  {about.data.members && about.data.members.length > 0 && (
    <section class="bg-gray-50 py-12">
      <div class="max-w-6xl mx-auto px-6">
        <h2 class="text-3xl font-bold text-center mb-8">Meet Our Team</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {about.data.members.map((member) => (
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              <Image
                src={member.portrait}
                alt={`Portrait of ${member.name}`}
                class="w-full h-64 object-cover"
              />
              <div class="p-4">
                <h3 class="text-xl font-semibold">{member.name}</h3>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}
</BaseLayout>
