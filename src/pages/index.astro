---
import BaseLayout from "../layouts/Base.astro";
import { getEntry, render } from "astro:content";

const homePage = await getEntry("pages", "home");

if (!homePage) {
  throw new Error("Home page content not found. Please ensure src/content/pages/home.md exists.");
}

const { title, description, cover, cta_text, cta_link } = homePage.data;
const { Content } = await render(homePage);
---

<BaseLayout
  title={title}
  description={description.replace(/\n/g, " ")}
>
  <section>
    <div class="relative overflow-hidden h-[80vh]">
      {cover && (
        <img
          src={cover.src}
          alt="Hero background"
          class="absolute inset-0 w-full h-full object-cover"
        />
      )}
      <div class="absolute inset-0 bg-black/50 flex flex-col justify-center items-center text-center text-white px-4">
        <h1 class="font-serif text-4xl md:text-6xl font-bold mb-6 max-w-4xl">
          {title}
        </h1>
        <div class="prose prose-invert prose-lg max-w-3xl mb-8">
          <Content />
        </div>
        {cta_link && cta_text && (
          <a
            href={cta_link}
            class="mt-8 inline-block bg-indigo-600 hover:bg-indigo-700 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-colors"
          >
            {cta_text}
          </a>
        )}
      </div>
    </div>
  </section>
</BaseLayout>
